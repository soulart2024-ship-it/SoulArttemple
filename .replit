entrypoint = "index.html"
modules = ["web", "python-3.11", "nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_11"
packages = ["static-web-server"]

[deployment]
publicDir = "/"
deploymentTarget = "autoscale"
run = ["node", "server/index-simple.js"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SoulArt Backend Server"

[[workflows.workflow]]
name = "SoulArt Backend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server/index-simple.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 80
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 34379
externalPort = 3000

[agent]
expertMode = true
integrations = ["javascript_log_in_with_replit:1.0.0", "javascript_stripe:1.0.0"]
